generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type PedidoStatusHistory {
  date   DateTime
  status String
}

model Pedido {
  id             String                @id @default(auto()) @map("_id") @db.ObjectId
  amount         Int
  client_id      Int
  created        DateTime
  discount       Int
  price          Float
  product_id     Int
  seller_id      Int
  status_history PedidoStatusHistory[]
}
