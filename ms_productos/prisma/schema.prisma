// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model Producto {
  id                Int         @id @default(autoincrement())
  owner             Proveedor   @relation(fields: [owner_id], references: [id])
  owner_id          Int
  name              String
  description       String
  category          Categoria   @relation(fields: [category_id], references: [id])
  category_id       Int
  state             Estado      @default(NUEVO)
  //Imagenes
  colors            Colores[]   //No funcionan los arrays de enums
  price             Int
  stock             Int
  features_text     String
  features_rows     String[]
  features_special  String[]
  published         DateTime    @default(now())
  available         Boolean     @default(true)
}

model Proveedor {
  id                Int    @id //Id externa del microservicio de usuario
  products          Producto[]
}


model Categoria {
  id                Int    @id @default(autoincrement())
  name              String     @unique
  products          Producto[]
}

enum Estado {
  NUEVO
  USADO
}

enum Colores {
  ROJO
  NARANJA
  AZUL
  VERDE
}
